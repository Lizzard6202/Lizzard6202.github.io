{% extends 'base.html.twig' %}

{% block title %}GameNight{% endblock %}

{% block body %}
    <h1>GameNight</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game_night.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game_night.name }}</td>
            </tr>
            <tr>
                <th>Slots</th>
                <td>{{ game_night.slots }}</td>
            </tr>
            <tr>
                <th>AgeRating</th>
                <td>{{ game_night.ageRating }}</td>
            </tr>
            <tr>
                <th>DateAndTime</th>
                <td>{{ game_night.dateAndTime ? game_night.dateAndTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Describtion</th>
                <td>{{ game_night.describtion }}</td>
            </tr>
            <tr>
                <th>Games</th>
                <td>
                {% if game_night.games != null %}
                {% for games in game_night.games %} 

                {{ games.name}} 
                {% endfor %}
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Visitors</th>
                <td>
                {% if game_night.visitors != null %}
                {% for visitors in game_night.visitors %} 

                {{ visitors.userName}} 
                {% endfor %}
                {% endif %}
                </td>
            </tr>
        </tbody>
    </table>game_night
    <a href="{{ path('app_game_night_index') }}">back to list</a>

    <a href="{{ path('app_game_night_edit', {'id': game_night.id}) }}">edit</a>

    {{ include('game_night/_delete_form.html.twig') }}
{% endblock %}
