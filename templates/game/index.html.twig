{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>InNight</th>
                <th>LikedBy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>
                    {% if game.inNights != null %}
                    {% for inNights in game.inNights %} 

                    {{ inNights.name}} 
                    {% endfor %}
                    {% endif %}
                </td>
                {# <td>{{ game.likedBy}}</td> #}
                <td>
                    {% if game.likedBy != null %}
                    {% for likedBy in game.likedBy %} 

                    {{ likedBy.userName}} 
                    {% endfor %}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">Create new</a>
{% endblock %}
