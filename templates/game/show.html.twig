{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>IsPlayedIN</th>
                <td>
                {% if game.inNights != null %}
                {% for inNights in game.inNights %} 

                {{ inNights.name}} 
                {% endfor %}
                {% endif %}
            </td>
            </tr>
            <tr>
                <th>LikedBy</th>
                <td>
                {% if game.likedBy != null %}
                {% for likedBy in game.likedBy %} 

                {{ likedBy.userName}} 
                {% endfor %}
                {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
